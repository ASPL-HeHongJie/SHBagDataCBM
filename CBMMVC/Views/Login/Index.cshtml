
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript" src="~/js/MD5/md5.js"></script>
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript" src="~/js/jquery.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/login.css" />
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
    <title>登录</title>
</head>
<body style="background-image: url(/image/LoginBackground.jpg);background-repeat:no-repeat;background-size:100% 100%;background-attachment: fixed;background-color:gray">

    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 text">
                        <div class="col-md-2" style="margin:0px;padding:0px;text-align:left">
                            <img src="/image/Logo.png" height="70" />
                        </div>
                        <div class="col-md-10" style="margin:0px;padding:0px">
                            <h1 style="text-align:left;margin-bottom:0px;font-size:30px">
                                @ViewBag.CompanyName
                            </h1>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>流量计远程诊断系统</h3>
                                <p>请输入用户名和密码</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-lock"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <form role="form" class="login-form" action="/Login/Login" onsubmit="encrypt()" method="post">
                                <div class="form-group">
                                    <label class="sr-only" for="form-username">Username</label>
                                    <input id="input_userName" type="text" name="form-username" placeholder="用户名..." class="form-username form-control" id="form-username">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="form-password">Password</label>
                                    <input id="input_password" type="password" name="form-password" placeholder="密码..." class="form-password form-control" id="form-password">
                                </div>
                                <button id="btn_login" type="submit" class="btn">登录</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="div_showErrorMessage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        ×
                    </button>
                    <h4 class="modal-title">
                        消息
                    </h4>
                </div>
                <div class="modal-body">
                    @Model
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary"
                            data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
    @{ if (Model != null)
        {
            <script>

                $(function () {
                    $("#div_showErrorMessage").modal('show');
                });
            </script>
        }
    }

    <script type="text/javascript">
        function encrypt() {
            $("#input_password").val(hex_md5($("#input_password").val()))
        }
    </script>
</body>

</html>